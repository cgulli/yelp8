<% if @restaurant.errors.any? %>
<section id="errors" >
    <h2> <%= pluralize(@restaurant.errors.count, "Error") %>
      <br>
      <img src="http://i.giphy.com/vFjeA70RA9nwc.gif"> </h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</section>
<% end %>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
